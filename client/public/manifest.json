{
  "short_name": "MERN",
  "name": "MERN App",
  "description": "Template for a MERN app",
  "manifest_version": "2",
  "version": "1.0.0",
  "id": "/?source=pwa",
  "start_url": "/?source=pwa",
  "display_override": ["window-controls-overlay"],
  "display": "standalone",
  "scope": "/",
  "theme_color": "#3367D6",
  "background_color": "#3367D6",
  "icons": [
    {
      "src": "/logo.svg",
      "type": "image/svg+xml",
      "sizes": "150x150"
    },
    {
      "src": "/icons-vector.svg",
      "type": "image/svg+xml",
      "sizes": "512x512"
    },
    {
      "src": "/icons-192.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "/icons-512.png",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot1.png",
      "type": "image/png",
      "sizes": "627x437",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshot2.jpg",
      "type": "image/jpg",
      "sizes": "720x540",
      "form_factor": "wide"
    }
  ],
  "shortcuts": [
    {
      "name": "Login Page",
      "short_name": "Login",
      "description": "Login to your account",
      "url": "/login?source=pwa",
      "icons": [{ "src": "/logo.svg", "sizes": "150x150" }]
    }
  ]
}
